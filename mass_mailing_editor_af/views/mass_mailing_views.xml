<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_mail_mass_mailing_internal_name">
        <field name="name">inherit.mail.mass.mailing.internal.name</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="after">
                <group>
                    <label for="internal_name" string="Internal Name"/>
                    <div>
                        <field name="internal_name"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="inherit_view_mail_mass_mailing_kanban">
        <field name="name">inherit.mail.mass_mailing.kanban</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_kanban"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="internal_name"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="inherit_view_mail_mass_mailing_tree">
        <field name="name">inherit.mail.mass_mailing.tree</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="internal_name"/>
            </field>
        </field>
    </record>
</odoo>
