<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mail_mass_mailing_contact_form_opt_out_all" model="ir.ui.view">
            <field name="name">mail.mass_mailing.contact.form.opt.out.all</field>
            <field name="model">mail.mass_mailing.contact</field>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_contact_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='subscription_list_ids']" position="before">
                    <div class="oe_right o_row">
                        <button name="opt_out_all" string="Opt out all" type="object"
                                class="oe_right oe_button_box"
                                groups="af_security.af_newsletter_manual"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
